<p id="notice"><%= notice %></p>
<style>
button {
  padding: 7px;
  border-radius: 7px;
  vertical-align: middle;
  color: #951936;
}
</style>
<div class="row">
	<div class="col col-md-3">
		<%= image_tag @oabook.cover_image.url.to_s, alt: @oabook.title %>
	</div>
	<div class="col col-md-9">
		<h2><%= @oabook.title %></h2>
    <% unless @oabook.subtitle.nil? %>
      <p><%= @oabook.subtitle %></p>
    <% end %>
    <% unless @oabook.edition.nil? %>
      <p><%= @oabook.edition %></p>
    <% end %>
    <% unless @oabook.author.nil? %>
      <p><%= @oabook.author %></p>
    <% end %>
    <% unless @oabook.supplemental.nil? %>
      <p><%= @oabook.supplemental.html_safe %></p>
    <% end %>
    <% unless @oabook.description.nil? %>
      <p><%= @oabook.description.html_safe %></p>
    <% end %>
	</div>
</div>
<div class="row" style="margin-top: 21px;margin-bottom: 4px;">
  <div class="col">
    Share this book:
  </div>
</div>

<div class="row" style="margin-top: 0;"> 
  <div class="col-md-4">
    <div class="social-shopping">
      <p class="social-icons">
        <span class='share s_twitter'></span> 
        <span class='share s_facebook'></span> 
        <span class='share s_tumblr'></span>
        <span class='share s_pinterest'></span>
      </p>
    </div>
  </div>
	
  <div class="col text-right">
    <button> <%= link_to "Read It Online", root_path+"open-access/epub/"+@oabook.id.to_s+"/"+@oabook.epub_identifier, target: "_blank", title: "Opens in New Window" %>  </button> 
    <button> <%= link_to "Download Epub", @oabook.epub.url, :disposition => 'attachment' %> </button>   
    <button> <%= link_to "Download PDF", @oabook.pdf.url, :disposition => 'attachment' %> </button>  
    <button> <%= link_to "Download MOBI", @oabook.mobi.url, :disposition => 'attachment' %> </button>  
    <!-- <button onClick="window.open('https://cdcshoppingcart.uchicago.edu/Cart/ChicagoBook.aspx?ISBN=<%= @oabook.isbn %>&&PRESS=temple');"> Print On-Demand </button> -->
  </div>
</div>
