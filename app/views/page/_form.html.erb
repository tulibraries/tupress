<%= form_for(page) do |f| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1><%= @action %></h1>
<div class="row">
  <div class="col col-md-1">
    <strong><%= f.label :name %></strong>
  </div>
  <div class="col">
    <%= f.text_field :name, size: 100 %>
  </div>
</div>
<div class="row" style="margin-top: 28px;">
  <div class="col col-md-1">
    <strong><%= f.label :content, style: "vertical-align: top;" %></strong>
    </div>
    <div class="col">
    <%= f.text_area :content, cols: 100, rows: 20  %>
  </div>
</div>
<div class="row" style="margin-top: 28px;">
  <div class="col col-md-1">
    <strong><%= f.label :page_bottom, style: "vertical-align: top;" %></strong>
    </div>
    <div class="col">
    <%= f.text_area :content2, cols: 100, rows: 20  %>
  </div>
</div>
<div class="row">
  <div class="col offset-md-1">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
</div>
<% end %>
