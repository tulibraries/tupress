<div class="container">
  <div class="row">
  <div class="col-md-9">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <%= link_to image_tag("OAH17.gif", class: 'd-block img-fluid', alt: 'Explore our history titles'), controller: 'book', action: 'bysubject', id: '1060' %>
      </div>
      <div class="carousel-item">
        <%= link_to image_tag("Library_April17.gif", class: 'd-block img-fluid', alt: 'Celebrate national library week -- links to Temple University Libraries'), 'http://library.temple.edu' %>
      </div>
      <div class="carousel-item">
        <%= link_to image_tag("Tai.gif", class: 'd-block img-fluid', alt: 'The Magic of Children\'s Gardens'), controller: 'book', action: 'show', id: '2437'  %>
      </div>
      <div class="carousel-item">
        <%= link_to image_tag("klezmer.gif", class: 'd-block img-fluid', alt: 'Klezmer: Music and Community in Twentieth-Century Jewish Philadelphia'), controller: 'book', action: 'show', id: '1937'  %>
      </div>
      <div class="carousel-item">
        <%= link_to image_tag("klezmer.gif", class: 'd-block img-fluid', alt: 'Suicide Squeeze: Taylor Hooton, Rob Garibaldi, and the Fight against Teenage Steroid Abuse'), controller: 'book', action: 'show', id: '2434'  %>
      </div>
      <div class="carousel-item">
        <%= link_to image_tag("boathouserow.gif", class: 'd-block img-fluid', alt: 'Boathouse Row: Waves of Change in the Birthplace of American Rowinge'), controller: 'book', action: 'show', id: '2375'  %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div class="col-md-3 no-padding">
<div id="follow-us">
 <ul class="list-inline">
    <li class="list-inline-item">
      <h2><small>Follow Us on:</small></h2>
    </li>
    <li class="list-inline-item">
      <%= link_to image_tag('twitter-icon.png', style: 'width:29px;border:0;', alt: 'Twitter Icon'), 'http://twitter.com/TempleUnivPress' %>
    </li>
    <li class="list-inline-item"><%= link_to image_tag('fb-icon.png', style: 'width:29px;border:0;', alt: 'Facebook Icon'), 'http://facebook.com/TempleUnivPress' %></li>
  </ul>
  </div>
<div id="scBlogContent">
  <%= link_to image_tag('visit.gif', alt: "North Philly Notes"), "http://templepress.wordpress.com", :class=>"blog-icon" %>
  <p><% @entries.take(1).each do |entry| %>
      <small><%= entry.description.html_safe %><br /><br />
      <%= link_to entry.title, entry.url, style: "font-weight:600;" %></small>
      <% end %>
  </p>
</div>

</div>
</div>


<div class="row" style="margin-top:28px">
<div class="col">
<h2 style="margin-top: 0;"><%= image_tag "news.gif", alt: 'News' %></h2>
</div>
</div>

<div class="row">

<% @news_books.each do |book| %>
  <div class="col col-md-4 text-center" style="line-height:1.1;margin-top: 10px;">
    <%= link_to image_tag(book.cover_image, border: 0, style: 'height:210px;'), {controller: 'book', action: 'show', :id=>book.book_id} %>
    <p style="text-align:justify;padding: 0 28px;margin-top: 10px;"><small><%= book.news_text.truncate(420).html_safe %></small></p>
  </div>
<% end %>

</div>




<div class="row" style="margin-top: 28px;">
  <div class="col">
    <h2><%= image_tag "hotoffthepress.gif", alt: 'Hot off the press' %></h2>
  </div>
</div>

<div class="row" style="padding: 14px;border-bottom:solid #eee 1px;padding-bottom: 28px;">
<div class="col col-md-11">
<% @hot_books.each do |book| %>
<div class="row" style="margin-top: 28px;">
  <div class="media text-center" style="width: 160px;text-align:center">
    <%= link_to image_tag(book.cover_image, alt: 'Book Cover', border: 0, class: 'd-flex mr-3', style: 'height:160px;margin:auto;'), {controller: 'book', action: 'show', :id=>book.book_id}, :style=>'width:100%;' %>
  </div>
  <div class="media-body" style="padding-left: 28px;">
  <h2><%= link_to book.title, :controller=>'book', :action=>'show', :id=>book.book_id %>
      <% if book.subtitle %>
        <br /><small><em><%= book.subtitle %></em></small>
      <% end %>
      </h2>
      <p class="author"><%= book.author.map { |author| author }.join(' and ') %></p>
      <p style="line-height:1.2"><small><%= book.hot_text.truncate(500).html_safe %></small></p>
  </div>
</div>
<% end %>
</div>


</div>




<div class="row" id="bottom-row">
<div class="col col-md-11 offset-md-1">
<div class="row">
  <div class="col col-md-3">
    <h2 style="color:#903;" class="text-center">Spring 2017 Catalog</h2>
    <p class="text-center">
    <%= link_to image_tag('spring17.gif', alt: 'catalog cover'), {controller: :book, action: :catalogs_by_season, :id=>'1'} %>
    </p>
    <p class="text-center" style="color:#903;"><%= link_to '[PDF Version]', 'http://www.temple.edu/tempress/catalogs/archive/spring2017.pdf' %></p>
  </div>

  <div class="col col-md-3">
    <h2 class="text-center" style="color:#903;">Books for Course Adoptions</h2>
  
  <div id="carousel2" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% @adoptions.each_with_index do |adoption,index| %>
        <% if index == 0 %>
          <li data-target="#carousel2" data-slide-to="<%= index %>" class="active" style="display:none;"></li>
          <% else %>
          <li data-target="#carousel2" data-slide-to="<%= index %>" style="display:none;"></li>
        <% end %>    
      <% end %>
    </ol>

    <div class="carousel-inner" role="listbox">
      <% @adoptions.each_with_index do |adoption,index| %>
        <% if index == 0 %>
          <div class="carousel-item active text-center">
        <% else %>
          <div class="carousel-item text-center">
        <% end %>
          <%= link_to image_tag(adoption.cover_image, 
                            class: 'd-block img-fluid', 
                            alt: adoption.title), 
                            controller: 'book', 
                            action: 'show', 
                            id: adoption.book_id %>
        </div>
      <% end %>
    </div> <!-- carousel-inner -->
  </div><!-- carousel2 -->
  </div>

  <div class="col col-md-3">
    <div class="text-center" style="height:100%;">
    <h2>
    <%= link_to 'Books on the Philadelphia Region',{controller: :book, action: :bysubject, :id=>'1071'} %>
    </h2>
    <div style="margin-top: 28px;">
    <%= link_to image_tag('phila.jpg', alt: 'love sculpture in philadelphia'), {controller: :book, action: :bysubject, :id=>'1071'}, :style=>"vertical-align:middle" %>
    </div>
    </div>
  </div>
</div>
</div>
</div>
<div class="row" style="margin-top: 56px;">
<div class="col col-md-6 offset-md-3">
<div id="scNewsletter">
      <p class="small">Subscribe to our monthly newsletter for info about new books and website content.</p>
        <%= form_tag "http://www.temple.edu/cgi-bin/mail?tempress@temple.edu", :method=>"post", :name=>"NewsletterSubscription", :id=>"NewsletterSubscription", :style=>"margin-top:7px;" do |f| %>
          <%= email_field_tag "email", nil, placeholder: "Enter your email..." %> 
          <%= text_field_tag "subject", "Newsletter Subscription", type: "hidden" %>
          <%= text_field_tag "next-url", "http://www.temple.edu/tempress/received_subscription.html", type: "hidden" %>
          <%= submit_tag "Subscribe!" %>
        <% end %>
</div>
</div>
</div>  
</div>











