<div class="row">
  <div class="col">
    <h1><%= @page.name %></h1>
  </div>
</div>

<div class="container" style="border:solid #ccc 1px;border-radius: 7px;padding: 21px;">
<div class="row" style="margin-bottom: 42px;">
<div class="col col-md-10 offset-md-1">
<%= @page.content.html_safe %>
<div id="contactform">
<%= form_tag("http://www.temple.edu/cgi-bin/mail?tempress@temple.edu", method: "post", :class=>"contact-form") do %>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:name, "Name:") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:name, "", :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:email, "Email:") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:email,'', :class => 'form-control') %>
    </div>
  </div>
  <div class="row">
    <div class="col col-md-3">
      <%= label_tag(:mediatype, "Media Type:") %>
    </div>
  </div>
  <div class="row">
    <div class="radio col offset-3">
      <label><input type="radio" name="mediatype" value="Radio/TV"> Radio/TV</label>
    </div>
  </div>
  <div class="row">
    <div class="radio col offset-3">
      <label><input type="radio" name="mediatype" value="Magazine"> Magazine</label>
    </div>
  </div>
  <div class="row">
    <div class="radio col offset-3">
      <label><input type="radio" name="mediatype" value="Journal"> Journal</label>
    </div>
  </div>
  <div class="row">
    <div class="radio col offset-3">
      <label><input type="radio" name="mediatype" value="Newspaper"> Newspaper</label>
    </div>
  </div>
  <div class="row">
    <div class="radio col offset-3">
      <label><input type="radio" name="mediatype" value="Exam/Desk Copy"> Exam/Desk Copy</label>
    </div>
  </div>
  <div class="row">
    <div class="radio col offset-3">
      <label><input type="radio" name="mediatype" value="Other"> Other</label>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:website, "Website:") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:website, "", :class => 'form-control') %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:request, "request:") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_area_tag(:request, "", size: "48x6", :class => 'form-control') %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:address1, "Address Line 1:") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:address, "", :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:address2, "Address Line 1:") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:address2, "", :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:city, "City:") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:city, "", :class => 'form-control', :required => true) %>
    </div>
  </div>
   <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:state, "State/Province/Region: ") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:state, "", :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:zipcode, "Zip/Postal Code: ") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:zipcode, "", :class => 'form-control', :required => true) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col col-md-3">
      <%= label_tag(:country, "Country (if not US):") %>
    </div>
    <div class="col col-md-9 col-12">
      <%= text_field_tag(:country,'', :class => 'form-control') %>
    </div>
  </div>

  <div class="row">
    <div class="col col-md-9 offset-md-2 new-section">
      <%= hidden_field_tag 'subject', 'Review Copy Request' %>
      <%= hidden_field_tag 'next-url', request.base_url+root_path+'received-reviewcopy' %>
      <%= submit_tag("Submit Request") %>
      <%= button_tag "Reset", type: :reset %>
    </div>
  </div>

<% end %>
</div>
</div>
</div>
<div id="formfooter" style="margin-top: 42px;">
  <div class="col col-md-9 offset-md-1">
    <strong>Please note</strong>: all requests are indeed thatâ€”-requests. Unfortunately, we can not always honor all of them. If you think we are unfamiliar with your publication, please send a sample/tearsheets with your request. Thank you.
  </div>
</div>
</div>
