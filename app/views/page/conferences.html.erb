<div class="container">
	<div class="row">
		<div class="col">
			<h1>Conferences</h1>
		</div>
	</div>
</div>

<% @conferences_month.sort_by{|c| c[0][:id]}.each do |month, conferences| %>
<div class="container" style="margin-top:21px;">
	<div class="row">
		<div class="col"><h2><%= month[:name] %></h2></div>
	</div>
	<div class="row">
		<div class="col" style="padding-left: 28px;">
		<% for conference in conferences %>

			<ul class="list-unstyled">

				<li><%= link_to conference.conference, conference.link %></li>

				<% if !conference.venue.blank? %>
					<li><%= conference.venue %></li>
				<% end %>

				<li><%= conference.location %></li>

				<li><%= conference.dates %></li>

				<% if !conference.booth.blank? %>
					<li><%= conference.booth %></li>
				<% end %>

			</ul>
			<% end %>

		</div>
	</div>
</div>
<% end %>
