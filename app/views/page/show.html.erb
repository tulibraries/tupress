<h1>Pages</h1>
<div class="row">
<div class="col" >
<%= link_to 'New Page', new_page_path, :style => "float: right;" %>
</div>
</div>
<div calls="row">
<div class="col">
<table border="0">
  <thead>
    <tr>
      <th width="25%">Name</th>
      <th width="50%">Content</th>
      <th colpsan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td valign="top"><%= page.name %></td>
        <td><%= page.content.html_safe %></td>
        <td class="text-right"><%= link_to 'Edit', edit_page_path(page) %></td>
        <td class="text-right"><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
