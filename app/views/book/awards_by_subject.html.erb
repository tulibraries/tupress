<div class="container" id="awards">
	<div class="row">
		<div class="col">
			<h1 ><%= @pagetitle %></h1>
		</div>
	</div>

	<% @books.each do |book| %>
	<div class="row book-row">
		<div class="media">
			<%= link_to image_tag(book.cover_image, class: 'd-flex mr-3'), {controller: 'book', action: 'show', :id=>book.book_id} %>
		</div>
		<div class="media-body">
			<h2><%= link_to book.title, :controller=>'book', :action=>'show', :id=>book.book_id %></h2>
			<% if book.subtitle %>
				<p class="subtitle"><%= book.subtitle %></p>
			<% end %>
			<p class="author"><%= book.author_byline %></p>
			<p class="format">
			<% unless book.pages_total.nil? %>
				<%= book.pages_total %> pages<br />
			<% end %>
			<% unless book.trim.nil? %>
				<%= book.trim %><br />
			<% end %>
			<% unless book.illustrations.nil? %>
				<%= book.illustrations %><br />
			<% end %>
				<br />
				<%  book.binding.each do |binding| %>
					<%= binding.fetch("binding", "").fetch("format", "") %>: <%= binding.fetch("binding", "").fetch("ean", "") %> <strong><%= binding.fetch("binding", "").fetch("price", "") %></strong><br />
				<% end %>
			</p>
			<p class="award">
				<% unless book.award.nil? %>	
				<%= book.award.html_safe %>
				<% if !book.award2.nil? %>
				<br />
				<%= book.award2.html_safe %>
				<% end %>
				<% if !book.award3.nil? %>
				<br />
				<%= book.award3.html_safe %>
				<% end %>
				<% if !book.award4.nil? %>
				<br />
				<%= book.award4.html_safe %>
				<% end %>
			</p>
		</div>
	</div>
<% end %>
</div>