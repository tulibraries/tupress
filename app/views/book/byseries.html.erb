<div class="row">
	<div class="col">
		<h1><%= @series.series %></h1>
	</div>
</div>

<div class="row">
	<div class="col">
		<% unless @series.description.empty? %>
			<%= @series.description %>
		<% end %>
	</div>
</div>

<% @books.each do |book| %>
	<div class="row book-row">
		<div class="media">
			<%= link_to image_tag(book.cover_image, border: 0, class: 'd-flex mr-3'), {controller: 'book', action: 'show', :id=>book.book_id} %>
		</div>
		<div class="media-body">
			<h2><%= link_to book.title, :controller=>'book', :action=>'show', :id=>book.book_id %></h2>
			<% if book.subtitle %>
				<p><em><%= book.subtitle %></em></p>
			<% end %>
			<p class="author"><%= book.author.map { |author| author }.join(' and ') %></p>
			<p class="format">
				<%= book.format.html_safe %>
				<br /><br />
				<%  book.binding.each do |binding| %>
					<%= binding[:type] %>: <%= binding[:ean] %> <strong><%= number_to_currency(binding[:price]) %></strong><br />
				<% end %>
				</p>
		</div>
	</div>
<% end %>
<% if @books.empty? %>
<div class="container empty-warning">
	<div class="row">
		<div class="col text-center">
			<div class="alert alert-warning">No titles available in this series yet.</div>
		</div>
	</div>
	</div>
<% end %>
