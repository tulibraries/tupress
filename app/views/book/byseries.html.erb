<div class="row">
	<div class="col">
		<h1><%= @series.series %></h1>
	</div>
</div>

<div class="row">
	<div class="col">
		<% unless @series.description.empty? %>
			<%= @series.description %>
		<% end %>
	</div>
</div>

<% @books.each do |book| %>
	<div class="row" style="padding: 28px;border-bottom:solid #ccc 1px;">
		<div class="media" style="text-align:center;">
			<%= link_to image_tag(book.cover_image, border: 0, class: 'd-flex mr-3', style: 'width:120px;'), {controller: 'book', action: 'show', :id=>book.book_id} %>
		</div>
		<div class="media-body">
			<h2><%= link_to book.title, :controller=>'book', :action=>'show', :id=>book.book_id %></h2>
			<% if book.subtitle %>
				<p><%= book.subtitle %></p>
			<% end %>
			<p class="author"><%= book.author.map { |author| author }.join(' and ') %></p>
			<p style="font-size: 65%;">
				<%= book.format.html_safe %>
				<br />
				<%  book.binding.each do |binding| %>
					<%= binding[:type] %> <%= binding[:ean] %> <%= number_to_currency(binding[:price]) %>
					<br />
				<% end %>
				</p>
		</div>
	</div>
<% end %>
<% if @books.empty? %>
<div class="container" style="margin-top: 28px;">
	<div class="row">
		<div class="col text-center">
			<div class="alert alert-warning">No titles available in this series yet.</div>
		</div>
	</div>
	</div>
<% end %>
