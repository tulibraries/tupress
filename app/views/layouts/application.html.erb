<!DOCTYPE html>
<html>
  <head>
    <title>Temple University Press</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>

  <div id="skip-link">
    <%= link_to "Skip to main content", "#skiplink_ada", :class => "element-invisible", :tabindex => "1" %>
    <%= link_to "Skip to site search", "#", :class => "element-invisible", :onclick => "document.getElementById('search-block').focus();", :tabindex => "2" %>
  </div>

<div id="wrapper">

	<%= render "header.html.erb" %>

  <div id="content" class="container">
    
		<a href="#" name="skiplink_ada" id="skiplink_ada"></a>

		<div class="row">
			<div class="col">
				<div class="container" style="padding-top:10px;padding-bottom:42px;">
					<% flash.each do |key, value| %>
					   <div class="flash <%= key %>"><%= value %></div>
					<% end %>

			    	<%= yield %>

    		</div>
    	</div>

    </div>
    <%= render "footer.html.erb" %>
  </div>
</div>
  </body>
</html>
