<p id="notice"><%= notice %></p>
<h1>People</h1>

<table cellpadding="4">
  <thead>
    <tr>
      <th width="25%">Name</th>
      <th width="25%">Email</th>
      <th colspan="3" align="center"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td width="10%">&nbsp;</td>
        <td><%= link_to 'Edit', edit_person_path(person) %> | 
         <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span style="font-size:120%;"><%= link_to 'New Person', new_person_path %></span>
