<%= promo_social %>
<div class="container">

  <div class="row">
    <div class="col-lg-8 col-sm-12">
      <h1>
      <%= @promotion.title %> 
      <%= subject_title(params[:subject]) unless params[:subject].nil? %>
      </h1>
    </div>
    <div class="col-lg-4 col-sm-12">
      <div class="social-shopping">
        <p class="text-lg-right social-icons">
          <span class='share s_twitter'></span>
          <span class='share s_facebook'></span>
          <span class='share s_tumblr'></span>
          <span class='share s_linkedin'></span>
          <span class='share s_pinterest'></span>
        </p>
        <% unless @promotion.pdf.file.nil? || @promotion.pdf_display_name.nil? %>
        <p class="text-lg-right">
          <%= link_to @promotion.pdf_display_name, @promotion.pdf.url %> 
          <span style="font-size: smaller;">[PDF]</span>
        </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="col-lg-3 col-md-12">
      <h2 class="hidden d-none">Subjects</h2>

      <ul class="d-none d-lg-block list-unstyled mt-0 ml-0 pl-3" style="border-top: solid #ccc 2px;padding: 14px;font-size: 1.05rem;background-color: #eee; border-radius:4px">
      <li class="promo-subject mb-2">
        <%= link_to "All Subjects", promotion_path(@promotion), style: "text-decoration: underline" %>
      </li>

      <% order_subjects(@subjects).each do |subject| %>
        <li class="promo-subject mb-2">
          <%= link_to subject[0], 
                      promotion_path(@promotion, subject: subject[1]), 
                      style: "text-decoration: underline" %>
        </li>
      <% end unless @subjects.nil? %>
      </ul>

      <div class="d-block d-lg-none">
        <%= render "subjects" %>
      </div>

    </div>

    <div class="col-12 col-lg-9">
      <div class="row">
      <% unless @promotion.intro_text.nil? %>
      <div class="col-12 mb-4 promo_intro">
        <%= sanitize @promotion.intro_text.html_safe %>
      </div>
      <% end %>

      <% @books.each do |book| %>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-4 text-center mb-4 mt-md-4">
          <% unless book.cover_image.url.blank? %>
            <% if book.cover_image.url.include?(".jpg") || book.cover_image.url.include?(".jpeg") || book.cover_image.url.include?(".png") || book.cover_image.url.include?(".gif")%>
              <%= link_to book_path(book.book_id) do %>
                <%= image_tag book.cover_image.url, alt: "", style: "height: 330px" %>
          <p class="mx-auto pt-2" style="font-weight: 600;"><%= book.title unless book.title.nil? %></p>
              <% end %>
            <% end %>
          <% end %>
          <div class="text-left mx-1" style="font-size: .84rem">
            <%= strip_tags(book.blurb) unless book.blurb.nil? %>
          </div>
                  </div>

          <% end %>
      </div>
    </div>
  </div>
</div>