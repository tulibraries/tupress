<div class="promotion-subjects-mobile mb-4" id="accordion">
  
  <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#subjects">
    Subjects <i class="fa fa-angle-down"></i>
  </a>
  
  <div id="subjects" class="panel-collapse collapse in">

    <ul class="list-unstyled mt-0 ml-0 pl-3 subjects-list">
      <li class="promo-subject mb-2">
        <%= link_to "All Subjects", promotion_path(@promotion) %>
      </li>
      <% order_subjects(@subjects).each do |subject| %>
        <li class="promo-subject mb-2">
          <%= link_to subject_name(subject), promotion_path(@promotion, subject: subject[1]) %>
        </li>
      <% end unless @subjects.nil? %>
    </ul>

  </div>

</div>
